<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/profile_pic"
        android:layout_alignTop="@+id/comment"
        android:src="@drawable/user"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_pic"
        android:layout_toStartOf="@+id/check"
        android:textSize="15sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp" />

    <TextView
        android:id="@+id/contentDishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_pic"
        android:layout_below="@+id/comment"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_toStartOf="@+id/check"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="4dp" />

    <ImageView
        android:id="@+id/check"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:contentDescription="@string/check_descript"
        android:src="@mipmap/check_green" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/check"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:contentDescription="@string/close_descript"
        android:src="@mipmap/close_red" />

</RelativeLayout>