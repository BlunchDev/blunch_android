<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="18dip"
    android:id="@+id/menu_item_list">

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/user_info">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/user_icon"
            android:src="@drawable/user"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/user_name"
            android:textSize="12dp"
            android:layout_below="@+id/user_icon"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="italic"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/menu_info"
        android:layout_toRightOf="@+id/user_info">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_name"
            android:textSize="18dp"
            android:textColor="#3964c3"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu_name"
            android:id="@+id/menu_loc"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_date"
            android:layout_below="@+id/menu_loc"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_time"
            android:layout_below="@+id/menu_date"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="italic"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/menu_info"
        android:id="@+id/menu_type"/>

</RelativeLayout>