<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dip"
    android:paddingBottom="4dip"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:id="@+id/menu_item_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:id="@+id/item_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:id="@+id/user_info">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/user_icon"
                android:src="@drawable/user"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/user_name"
                android:textSize="14dp"
                android:layout_below="@+id/user_icon"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textStyle="italic"
                android:paddingTop="2dp"
                android:gravity="center"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/menu_info"
            android:layout_toRightOf="@+id/user_info">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/menu_name"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menu_name"
                android:id="@+id/menu_loc"
                android:textSize="14dp"
                android:textColor="#000000"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/menu_date"
                android:layout_below="@+id/menu_loc"
                android:textSize="14dp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/menu_time"
                android:layout_below="@+id/menu_date"
                android:textSize="14dp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textStyle="italic"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/menu_info"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleX="1.8"
                    android:scaleY="1.8"
                    android:id="@+id/menu_type"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:id="@+id/dietTags"
                    android:gravity="center"
                    android:layout_gravity="center">

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/item_content"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/custom_divider"/>

    </RelativeLayout>

</RelativeLayout>